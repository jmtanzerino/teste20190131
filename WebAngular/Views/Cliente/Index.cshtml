@model IEnumerable<Models.Cliente>

@{
    Layout = null;
}

<!DOCTYPE html>

<html ng-app="ClienteApp" ng-controller="ClienteController">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/angular.js"></script>

</head>
<body>

    <script type="text/javascript">
        (function () {
            angular.module("ClienteApp", [])
                .controller("ClienteController", ClienteControllerFunction);

            function ClienteControllerFunction($scope, $http) {

                $scope.hello = "hello there";

                $http.get('http://localhost:9023/api/cliente/get').
                    success(function (data, status, headers, config) {
                        $scope.Clientes = data;
                    }).
                    error(function (data, status, headers, config) {
                        alert('error');
                    });
            };

        })();

    </script>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

    <p>
        
    </p>
    
    <table class="table">
        <tr ng-repeat="cliente in Clientes">
            <td>{{cliente.Nome}}</td>
        </tr>

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DtNasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>

        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DtNasc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ClienteId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ClienteId })
                    </td>
                </tr>
            }
        }

    </table>


</body>
</html>
